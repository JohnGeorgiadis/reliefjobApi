{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@appRoot/*": ["./src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src", "src/typings/custom.d.ts"]
}
